<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/caribbeandark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Sign Up"
            app:titleTextColor="@color/white"
            app:theme="@style/ToolbarStyle"
            >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/vp_prmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
      >

    </android.support.v4.view.ViewPager>


    <!--<github.chenupt.springindicator.SpringIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:scaleX=".2"
        android:scaleY=".2"
        app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:siIndicatorColor="@color/colorPrimary"
        app:siSelectedTextColor="@android:color/white"
        app:siTextColor="@color/colorPrimaryDark"
        app:siTextSize="18sp" />-->

    <android.support.design.widget.CoordinatorLayout

        android:background="@color/caribbeandark"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:visibility="invisible"
            android:onClick="goleft"
            android:id="@+id/prmt_leftarrow"
            android:layout_gravity="start|center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Back"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@android:color/transparent"
            />

        <TextView
            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:onClick="goright"
            android:id="@+id/prmt_right_arrow"
            android:layout_gravity="end|center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white"
            />

        <TextView
            android:onClick="goright"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:id="@+id/prmt_center_arrow"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:text="Go"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/prmt_pay"
            android:text="SUBMIT"
            android:visibility="invisible"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>